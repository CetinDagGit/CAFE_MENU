@model List<CAFE_MENU.Models.Product>

<h2>Your cart</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Remove", "Cart", new { id = product.ProductId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h4>Toplam Fiyat: @ViewBag.TotalPrice.ToString("C")</h4>
        <form method="post" action="@Url.Action("Checkout", "Cart")">
            <button type="submit" class="btn btn-success">Place Order</button>
        </form>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
}
else
{
    <p>Your cart is empty.</p>
}
