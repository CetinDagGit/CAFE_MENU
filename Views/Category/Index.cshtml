@model List<CAFE_MENU.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "_AdminLayout";
}

<h2>Kategori Listesi</h2>

<a href="@Url.Action("AddCategory", "Category")" class="btn btn-primary mb-3">Yeni Kategori Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Üst Kategori</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@(category.ParentCategory != null ? category.ParentCategory.CategoryName : "Ana Kategori")</td>
                <td>@category.CreatedDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("UpdateCategory", "Category", new { id = category.CategoryId })" class="btn btn-warning btn-sm">Düzenle</a>
                    <form asp-action="DeleteCategory" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@category.CategoryId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
