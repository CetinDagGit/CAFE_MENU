@model CAFE_MENU.Models.Product
@{
    ViewData["Title"] = "Ürünü Güncelle";
    Layout = "_AdminLayout";
}
<h2>Ürünü Güncelle</h2>

<form asp-action="UpdateProduct" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label>Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Kategori ID</label>
        <input asp-for="CategoryId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label>Resim URL</label>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Güncelle</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">İptal</a>
</form>
