@model CAFE_MENU.Models.Product
@{
    ViewData["Title"] = "Update Product";
    Layout = "_AdminLayout";
}
<h2>Update Product</h2>

<form asp-action="UpdateProduct" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="ProductName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input asp-for="CategoryId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label>Resim URL</label>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
</form>
