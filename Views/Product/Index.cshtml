@model List<CAFE_MENU.Models.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Ürünler";
    Layout = "_AdminLayout";
}
<h2>Ürünler</h2>
<a href="@Url.Action("AddProduct", "Product")" class="btn btn-success">Yeni Ürün Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.CategoryName</td>
                <td>@product.Price ₺</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" alt="Ürün Resmi" width="50" height="50" />
                    }
                    else
                    {
                        <span>Resim Yok</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("UpdateProduct", "Product", new { id = product.ProductId.ToString() })" class="btn btn-warning">Düzenle</a>
                    <form asp-action="DeleteProduct" asp-controller="Product" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.ProductId.ToString()" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (ViewData["CurrentPage"] != null && ViewData["TotalPages"] != null)
    {
        var currentPage = (int)ViewData["CurrentPage"];
        var totalPages = (int)ViewData["TotalPages"];


        if (currentPage > 1)
        {
            <a href="@Url.Action("Index", "Product", new { page = currentPage - 1 })" class="btn btn-primary">Önceki</a>
        }
        if (currentPage < totalPages)
        {
            <a href="@Url.Action("Index", "Product", new { page = currentPage + 1 })" class="btn btn-primary">Sonraki</a>
        }

        <p>Sayfa @currentPage / @totalPages</p>
    }
</div>
