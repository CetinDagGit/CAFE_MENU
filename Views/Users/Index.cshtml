@model List<CAFE_MENU.Models.User>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Users";
}

<h2>Kullanıcı Listesi</h2>

<a href="@Url.Action("AddUser", "Users")" class="btn btn-primary">Yeni Kullanıcı Ekle</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int index = 1;
            @foreach (var user in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>
                        <a href="@Url.Action("UpdateUser", "Users", new { id = user.UserId })" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="@Url.Action("DeleteUser", "Users", new { id = user.UserId })" class="btn btn-danger btn-sm" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Henüz kullanıcı eklenmemiş.</td>
            </tr>
        }
    </tbody>
</table>
