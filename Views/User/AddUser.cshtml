@model CAFE_MENU.Models.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "AddUser";
}

<h2>Yeni Kullanıcı Ekle</h2>

<form asp-action="AddUser" method="post">
    <div>
        <label>Ad</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Soyad</label>
        <input asp-for="LastName" required />
    </div>
    <div>
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" required />
    </div>
    <div>
        <label>Şifre</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Kaydet</button>
</form>
