@model CAFE_MENU.Models.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "AddUser";
}

<h2>Add New User</h2>

<form asp-action="AddUser" method="post">
    <div>
        <label>First Name</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Surname</label>
        <input asp-for="LastName" required />
    </div>
    <div>
        <label>User Name</label>
        <input asp-for="UserName" required />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Save</button>
</form>
