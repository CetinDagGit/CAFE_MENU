@model CAFE_MENU.Models.Property
@{
    ViewData["Title"] = "Özelliği Güncelle";
    Layout = "_AdminLayout";
}

<h2>Özelliği Güncelle</h2>

<form asp-action="UpdateProperty" method="post">
    <input type="hidden" asp-for="PropertyId" />
    <div class="form-group">
        <label>Anahtar</label>
        <input asp-for="Key" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Değer</label>
        <input asp-for="Value" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Güncelle</button>
    <a href="@Url.Action("Index", "Property")" class="btn btn-secondary">İptal</a>
</form>
