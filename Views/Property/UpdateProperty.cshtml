@model CAFE_MENU.Models.Property
@{
    ViewData["Title"] = "Update Property";
    Layout = "_AdminLayout";
}

<h2>Update Property</h2>

<form asp-action="UpdateProperty" method="post">
    <input type="hidden" asp-for="PropertyId" />
    <div class="form-group">
        <label>Key</label>
        <input asp-for="Key" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Value</label>
        <input asp-for="Value" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Save</button>
    <a href="@Url.Action("Index", "Property")" class="btn btn-secondary">Cancel</a>
</form>
