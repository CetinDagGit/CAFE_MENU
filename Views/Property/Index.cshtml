@model List<CAFE_MENU.Models.Property>

@{
    ViewData["Title"] = "Özellikler";
    Layout = "_AdminLayout";
}

<h2>Özellikler</h2>

<a href="@Url.Action("AddProperty", "Property")" class="btn btn-success mb-3">Yeni Özellik Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Anahtar</th>
            <th>Değer</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int index = ((ViewBag.CurrentPage - 1) * 10) + 1;
            @foreach (var property in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@property.Key</td>
                    <td>@property.Value</td>
                    <td>
                        <a href="@Url.Action("UpdateProperty", "Property", new { id = property.PropertyId })" class="btn btn-warning btn-sm">Düzenle</a>
                        <form asp-action="DeleteProperty" asp-controller="Property" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@property.PropertyId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bu özelliği silmek istediğinize emin misiniz?');">Sil</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Henüz özellik eklenmemiş.</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
