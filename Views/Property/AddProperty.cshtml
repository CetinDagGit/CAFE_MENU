@model CAFE_MENU.Models.Property
@{
    ViewData["Title"] = "Yeni Özellik Ekle";
    Layout = "_AdminLayout";
}

<h2>Yeni Özellik Ekle</h2>

<form asp-action="AddProperty" method="post">
    <div class="form-group">
        <label>Anahtar</label>
        <input asp-for="Key" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Değer</label>
        <input asp-for="Value" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="@Url.Action("Index", "Property")" class="btn btn-secondary">İptal</a>
</form>
