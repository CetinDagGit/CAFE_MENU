@model CAFE_MENU.Models.Property
@{
    ViewData["Title"] = "AddProperty";
    Layout = "_AdminLayout";
}

<h2>Add Property</h2>

<form asp-action="AddProperty" method="post">
    <div class="form-group">
        <label>Key</label>
        <input asp-for="Key" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Value</label>
        <input asp-for="Value" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index", "Property")" class="btn btn-secondary">Cancel</a>
</form>
